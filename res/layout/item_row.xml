<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/holder"
    android:layout_width="match_parent"
    android:layout_height="90dp" >



    <LinearLayout 
        android:layout_height="90dp"
        android:layout_width="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">
        

	   <RelativeLayout
	        android:layout_height="match_parent"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_marginRight="6dp"
	        android:layout_marginTop="8dp"
	        android:layout_marginBottom="2dp" >
	        <ImageView
		        android:id="@+id/row_item_image"
		        android:layout_width="80dp"
		        android:layout_height="80dp"
		        android:layout_centerVertical="true"
		        android:layout_marginLeft="3dp"
		        android:layout_marginRight="6dp"
		        android:gravity="center"
		        android:layout_marginTop="8dp"
		        android:layout_marginBottom="5dp"
		        android:src="@drawable/stub"/>
	        <TextView
	            android:id="@+id/row_item_title"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@+id/row_item_image"
	            android:gravity="left|top"
	            android:maxLines="3"
	            android:text="Apple Ipod Touch 32 Gb 4ta Generacion Filma Hd Envio Gratis Apple Ipod Touch 32 Gb 4ta Generacion Filma Hd Envio Gratis"
	            android:textColor="#525252"
	            android:textSize="12sp" />

	        <TextView
	            android:id="@+id/row_item_subtitle"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/row_item_title"
	            android:layout_toRightOf="@+id/row_item_image"
	            android:gravity="left|top"
	            android:maxLines="1"
	            android:text="100 vendidos"
	            android:textColor="#888888"
	            android:textSize="10sp" />

	        <TextView
	            android:id="@+id/row_item_price"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignLeft="@+id/row_item_subtitle"
	            android:layout_below="@+id/row_item_subtitle"
	            android:gravity="left|top"
	            android:maxLines="1"
	            android:text="U$S 1000.000"
	            android:textColor="#971515"
	            android:textSize="14sp" />
	        
	    </RelativeLayout>
	    
    </LinearLayout>
</RelativeLayout>